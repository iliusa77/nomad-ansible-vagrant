server {
  enabled = true
  bootstrap_expect = 1
}

consul {
  address             = "{{ consul_server_ip }}:8500"
  server_service_name = "nomad"
  client_service_name = "nomad-client"
  auto_advertise      = true
  server_auto_join    = true
  client_auto_join    = true
}

bind_addr = "{{ nomad_server_ip }}"

advertise {
  http = "{{ nomad_server_ip }}"
}

client {
  enabled = true
}